<h1>Login</h1>
<p>Welcome to the StarOR administrative application! Please Sign in.</p>
<p>
  <%= flash[:success] unless flash[:success].blank? %>
  <%= flash[:error] unless flash[:error].blank? %>
</p>
<div>
  <% if flash[:status]==FALSE %>
      <p><%= flash[:alert] %></p>
  <% end %>
</div>
<%= form_for(:session, :url => sessions_path) do |f| %>
    <div>
      <%=f.label :username %>
      <%=f.text_field :username %>
    </div>

    <div>
      <%=f.label :password %>
      <%=f.password_field :password %>
    </div>
    <div>
      <%=f.submit "Login" %>
    </div>
<% end %>